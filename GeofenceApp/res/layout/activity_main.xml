<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

  <FrameLayout
        android:id="@+id/lytContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black" >

            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#C0C0C0"
                android:padding="5dip" >

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/status"
                    android:textColor="#000000"
                    android:textSize="18dip" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:text="@string/total"
                    android:textColor="#000000"
                    android:textSize="18dip" />
            </RelativeLayout>

            <TextView
                android:id="@+id/current_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="40dip"
                android:text="Current Location"
                android:textColor="#3087b4"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/lyt_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/current_loc"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/black"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:background="#F8F8F8"
                    android:padding="5dp"
                    android:text="address \n  "
                    android:textColor="@android:color/black" />

                <ImageButton
                    android:id="@+id/save_data"
                    android:layout_width="0dp"
                    android:layout_height="30dip"
                    android:layout_gravity="bottom"
                    android:layout_weight=".1"
                    android:background="@drawable/ic_launcher"/>
                <TextView
                    android:id="@+id/txt_total_time"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight=".2"
                    android:gravity="bottom|right"
                    android:text="Duration \n 21.0"
                    android:textColor="#ffffff" />
             
            </LinearLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/lyt_address"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/recent_places"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="Recent Places"
                android:textColor="#3087b4"
                android:textSize="17sp" />

            <ListView
                android:id="@+id/rowItems"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/recent_places"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:divider="#F8F8F8"
                android:dividerHeight="1dip" >
            </ListView>
        </RelativeLayout>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/lytDrawerLeft"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#191919" />

</android.support.v4.widget.DrawerLayout>

