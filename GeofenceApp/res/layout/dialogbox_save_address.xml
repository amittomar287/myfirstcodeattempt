<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/rel_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_location_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/edt_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_location_name"
                android:hint="Name The Location" />

            <TextView
                android:id="@+id/txt_edt_address"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/edt_address_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="Edit Address"
                android:textSize="17sp" />

            <CheckBox
                android:id="@+id/check_edt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_address_name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/txt_edt_address" />
        </RelativeLayout>

        <EditText
            android:id="@+id/edt_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_one"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip" />

        <LinearLayout
            android:id="@+id/lyt_choose_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_address"
            android:layout_marginTop="20dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_choose_icon"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Choose Icon"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_select_icon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lyt_choose_icon"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_radius"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="Location Radius"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_radius"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner_select_icon" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_save_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lyt_location"
            android:layout_centerHorizontal="true"
            android:text="Submit" />
    </RelativeLayout>

</ScrollView>
